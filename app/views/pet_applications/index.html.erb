
<%= render partial: '/partials/hero', locals: {page_title: "Applications for #{@pet.name}"} %>
<% if @applicants.empty? %>
  <p>no current applications for <%= @pet.name %></p>
<% else %>
<section class="cards">
<div class="columns is-multiline">
    <% @applicants.each do |applicant| %>
      <%= link_to "#{applicant.name}", "/applications/#{applicant.id}" %>
    <% end %>
</div>
</section>
<% end %>
